node {

     try {
          stage('Initialize') {
            def sbtHome = tool 'mySbt'
            env.PATH = "${sbtHome}/bin:${env.PATH}"
        }
        
        stage('Checkout') {
            checkout scm
        }

        stage('Build') {
            echo "Compiling..."
            sh "sbt compile"
        }

        stage('Unit Test') {
            echo "Compiling..."
            sh "sbt test"
        }

        stage('SonarQube analysis') {
          sh "sbt -Dsonar.host.url=http://192.168.99.102:9000 sonarScan"
        }

        stage('CleanWorkspace') {
            cleanWs()
        }

     } catch (e) {
         currentBuild.result = "FAILED"
         throw e
     }
}
